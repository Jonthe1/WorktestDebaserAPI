@model Debaser.Models.DebaserDataSearch
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "Debaser", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(d => d.FromDate)
        @Html.TextBoxFor(d => d.FromDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(d => d.ToDate)
        @Html.TextBoxFor(d => d.ToDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(d => d.Location)
        @Html.DropDownListFor(d => d.Location, new List<SelectListItem>
        {
           new SelectListItem{ Text = "Strand och Medis", Value = "" },
           new SelectListItem{ Text = "Strand", Value = "strand" },
           new SelectListItem{ Text = "Medis", Value = "medis" }
        }, "Välj Plats", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}