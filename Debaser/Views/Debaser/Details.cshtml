@model Debaser.Models.DebaserData
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style="background-image: url(@Model.ImageUrl); background-size: cover;">
    <h1 class="details-text-debaser" style="color: white;">@Model.Event </h1>
    <h1 class="details-text-debaser" style="color: white;">@Model.EventDate, @Model.Venue - @Model.Room</h1>
    <h2 class="details-text-debaser" style="color: white;">@Model.SubHead</h2>
    @if (Model.Tags.ToString() != " ") // If there was tags related to the event, display them
    {
        <h2 class="details-text-debaser" style="color: white;">Genre: @Model.Tags </h2>
    }
    <br />
    <p class="details-text-debaser">@Model.Age</p>
    <p class="details-text-debaser">@Model.Admission</p>
    <p class="details-text-debaser">Öppet mellan @Model.Open</p>

    @if (Model.TicketUrl != "") // If there was a ticket url, create a button for it
    {
        <p><a href="@Model.TicketUrl" class="btn btn-primary btn-lg">Köp biljett &raquo;</a></p>
    }
</div>
<div class="jumbotron">
    <p>@Model.Description</p>
</div>



